<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppCadastro.Views.Cadastro">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Entry Placeholder="Nome do evento" Text="{Binding Nome}" />

        <DatePicker Date="{Binding DataInicio}" 
        MinimumDate="2025-01-01" />
        <DatePicker Date="{Binding DataFim}"
        MinimumDate="2025-01-01" />

        <Entry Placeholder="NÃºmero de participantes"
               Keyboard="Numeric"
               Text="{Binding NumeroParticipantes}" />

        <Entry Placeholder="Local do evento"
               Text="{Binding Local}" />

        <Entry Placeholder="Custo por participante"
               Keyboard="Numeric"
               Text="{Binding CustoPorParticipante}" />

        <Button Text="Cadastrar"
                Clicked="OnCadastrarClicked"/>
    </VerticalStackLayout>

</ContentPage>