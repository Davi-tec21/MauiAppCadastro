<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppCadastro.Views.Evento_resumo">

    <VerticalStackLayout Spacing="6" Padding="10">

        <Label Text="{Binding Nome}"
           FontSize="20"/>

        <Label Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding DataFim, StringFormat='Término: {0:dd/MM/yyyy}'}" />

        <Label Text="{Binding Local, StringFormat='Local: {0}'}" />

        <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" />

        <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por participante: {0:C}'}" />

        <Label Text="{Binding DuracaoDias, StringFormat='Duração: {0} dias'}" />

        <Label Text="{Binding CustoTotal, StringFormat='Custo total: {0:C}'}"
           FontAttributes="Bold" />

    </VerticalStackLayout>

</ContentPage>